@model Employee

@{ 
    ViewBag.Title= "Create Employee";
}

    <form method="post" asp-controller="home" asp-action="create" class="mt-3">

        <div class="form-group row">
            <label asp-for="Name" class="col-form-label col-sm-2"></label>
            <div class="col-sm-8">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-form-label col-sm-2"></label>
            <div class="col-sm-8">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Department" class="col-form-label col-sm-2"></label>
            <div class="col-sm-8">
                <select asp-for="Department"
                        asp-items="Html.GetEnumSelectList<Dept>()" class="custom-select mr-sm-2">
                    <option value="">Please select</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>

    </form>   
    <div asp-validation-summary="All" class="text-danger"></div>
