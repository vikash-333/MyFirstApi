@model IEnumerable<Employee>

@{ 

    ViewBag.Title = "Employee List";
}

    <table>
        <thead>
            <tr>
                <td><b>Id</b></td>
                <td><b>Name</b></td>
                <td><b>Department</b></td>
                <td><b>Email</b></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Department</td>
                    <td>@employee.Email</td>
                </tr>
            }

        </tbody>

    </table>
